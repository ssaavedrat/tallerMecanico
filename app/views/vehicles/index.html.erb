<p style="color: green"><%= notice %></p>
<h1 class='mb-5'>Vehículos</h1>
<%# If admin print "hello world" %>
<% if current_user.admin? %>
  <%= link_to "Enrolar nuevo vehículo", new_vehicle_path, class:'btn btn-primary' %>
<% end %>
<div class="my-5 row row-cols-1 row-cols-md-3 g-4">
  <% @vehicles.each do |vehicle|%>
    <div class="col">
      <div class="card text-center bg-light" id="<%= dom_id vehicle %>">
        <h5 class="card-header text-center mb-3"><strong>Vehículo (Patente):</strong> <%= vehicle.plate %></h5>
        <div class="card-body">
          <p class="card-title"><strong>Dueño:</strong> <%= vehicle.user.name %></p>
          <p class="card-text"><strong>Marca:</strong> <%= vehicle.brand %></p>
          <p class="card-text"><strong>Modelo:</strong> <%= vehicle.model %></p>
          <p class="card-text"><strong>Año:</strong> <%= vehicle.year %></p>
          <p class="card-text"><strong>Color:</strong> <%= vehicle.color %></p>
          <p class="card-text"><strong>Problema:</strong> <%= vehicle.car_issue %></p>
        </div>
        <p>
          <%= link_to "Ver", vehicle, class:"btn btn-primary" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
